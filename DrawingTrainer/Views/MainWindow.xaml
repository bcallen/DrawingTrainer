<Window x:Class="DrawingTrainer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:DrawingTrainer.ViewModels"
        xmlns:views="clr-namespace:DrawingTrainer.Views"
        Title="Drawing Trainer" Height="768" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:LibraryViewModel}">
            <views:LibraryView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PhotoImportViewModel}">
            <views:PhotoImportView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SessionPlannerViewModel}">
            <views:SessionPlannerView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ActiveSessionViewModel}">
            <views:ActiveSessionView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PostSessionViewModel}">
            <views:PostSessionView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:GalleryViewModel}">
            <views:GalleryView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}">
            <DockPanel>
                <!-- App Title -->
                <StackPanel DockPanel.Dock="Top" Margin="20,28,20,32">
                    <TextBlock Text="D R A W I N G" FontSize="18" FontWeight="ExtraBold"
                               Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text="T R A I N E R" FontSize="18" FontWeight="Thin"
                               Foreground="#444444"/>
                </StackPanel>

                <!-- Divider -->
                <Border DockPanel.Dock="Top" Height="1" Background="{StaticResource BorderBrush}"
                        Margin="20,0,20,16"/>

                <!-- Navigation -->
                <StackPanel DockPanel.Dock="Top">
                    <TextBlock Text="N A V I G A T E" FontSize="9" FontWeight="Bold" Foreground="#333333"
                               Margin="20,4,0,8"/>
                    <Button Content="LIBRARY" Style="{StaticResource SidebarButton}"
                            Command="{Binding NavigateToLibraryCommand}"/>
                    <Button Content="IMPORT" Style="{StaticResource SidebarButton}"
                            Command="{Binding NavigateToImportCommand}"/>
                    <Button Content="SESSIONS" Style="{StaticResource SidebarButton}"
                            Command="{Binding NavigateToPlannerCommand}"/>
                    <Button Content="GALLERY" Style="{StaticResource SidebarButton}"
                            Command="{Binding NavigateToGalleryCommand}"/>
                </StackPanel>

                <!-- Version -->
                <StackPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom" Margin="20,0,20,20">
                    <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,0,0,12"/>
                    <TextBlock Text="v1.0" FontSize="10" Foreground="#333333" FontWeight="SemiBold"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Sidebar edge accent -->
        <Border Grid.Column="1" Width="1" Background="{StaticResource BorderBrush}"/>

        <!-- Content Area -->
        <ContentControl Grid.Column="2" Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
