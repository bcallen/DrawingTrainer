<UserControl x:Class="DrawingTrainer.Views.SessionPlannerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:DrawingTrainer.Converters">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <converters:TimeSpanFormatConverter x:Key="TimeSpanFormat"/>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Session Planner" Style="{StaticResource PageHeader}" DockPanel.Dock="Left"/>
            <Button Content="New Plan" Style="{StaticResource PrimaryButton}"
                    Command="{Binding NewPlanCommand}" DockPanel.Dock="Right"
                    HorizontalAlignment="Right"
                    Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}"/>
        </DockPanel>

        <!-- Plan Editor -->
        <Border Grid.Row="1" Style="{StaticResource Card}"
                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Plan Name" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"
                               Foreground="{StaticResource TextBrush}"/>
                    <TextBox Text="{Binding PlanName, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="14" Padding="8" Margin="0,0,0,16"/>

                    <TextBlock Text="Exercises" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"
                               Foreground="{StaticResource TextBrush}"/>

                    <ItemsControl ItemsSource="{Binding Exercises}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                        CornerRadius="2" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <ComboBox Grid.Column="0" ItemsSource="{Binding AvailableTags}"
                                                  SelectedItem="{Binding SelectedTag}"
                                                  FontSize="14" Margin="0,0,8,0">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Name}"/>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>

                                        <TextBlock Grid.Column="1" Text="Duration:" VerticalAlignment="Center"
                                                   Margin="0,0,4,0" FontSize="13" Foreground="{StaticResource TextLightBrush}"/>
                                        <TextBox Grid.Column="2" Text="{Binding DurationMinutes, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="40" FontSize="14" Padding="4" TextAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="m" VerticalAlignment="Center"
                                                   Margin="2,0,8,0" FontSize="13" Foreground="{StaticResource TextLightBrush}"/>
                                        <TextBox Grid.Column="4" Text="{Binding DurationSeconds, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="40" FontSize="14" Padding="4" TextAlignment="Center"/>
                                        <TextBlock Grid.Column="5" Text="s" VerticalAlignment="Center"
                                                   Margin="2,0,0,0" FontSize="13" Foreground="{StaticResource TextLightBrush}"/>

                                        <Button Grid.Column="6" Content="X" Style="{StaticResource DangerButton}"
                                                Padding="8,4" FontSize="11" Margin="12,0,0,0"
                                                VerticalAlignment="Center"
                                                Command="{Binding DataContext.RemoveExerciseCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button Content="+ Add Exercise" Style="{StaticResource SecondaryButton}"
                            Command="{Binding AddExerciseCommand}" Margin="0,8,0,16"
                            HorizontalAlignment="Left"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Style="{StaticResource SecondaryButton}"
                                Command="{Binding CancelEditCommand}" Margin="0,0,8,0"/>
                        <Button Content="Save Plan" Style="{StaticResource PrimaryButton}"
                                Command="{Binding SavePlanCommand}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Saved Plans List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                      Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}">
            <StackPanel>
                <ItemsControl ItemsSource="{Binding SavedPlans}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource Card}" Margin="0,0,0,12">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <DockPanel Grid.Row="0">
                                        <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextBrush}" DockPanel.Dock="Left"/>
                                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right"
                                                    HorizontalAlignment="Right">
                                            <Button Content="Edit" Style="{StaticResource SecondaryButton}"
                                                    Padding="12,6" FontSize="12" Margin="0,0,4,0"
                                                    Command="{Binding DataContext.EditPlanCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"/>
                                            <Button Content="Delete" Style="{StaticResource DangerButton}"
                                                    Padding="12,6" FontSize="12" Margin="0,0,4,0"
                                                    Command="{Binding DataContext.DeletePlanCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </DockPanel>

                                    <ItemsControl Grid.Row="1" ItemsSource="{Binding Exercises}" Margin="0,8,0,0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock FontSize="13" Foreground="{StaticResource TextLightBrush}" Margin="0,2">
                                                    <Run Text="{Binding Tag.Name, Mode=OneWay}"/>
                                                    <Run Text=" - "/>
                                                    <Run Text="{Binding DurationSeconds, Converter={StaticResource TimeSpanFormat}, Mode=OneWay}"/>
                                                </TextBlock>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <Button Grid.Row="2" Content="Start Session" Style="{StaticResource PrimaryButton}"
                                            Margin="0,12,0,0" HorizontalAlignment="Left"
                                            Command="{Binding DataContext.StartSessionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty state -->
                <TextBlock Text="No session plans yet. Click 'New Plan' to create one!"
                           FontSize="16" Foreground="{StaticResource TextLightBrush}"
                           HorizontalAlignment="Center" Margin="0,40,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SavedPlans.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
